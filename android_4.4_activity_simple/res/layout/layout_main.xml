<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:tools="http://schemas.android.com/tools">

    <TextView 
        android:id="@+id/main_text_input"
        android:text="@string/main_text_input"
        android:layout_width="wrap_content"
        
        android:layout_height="wrap_content"/>
     
    <EditText
        android:id="@+id/main_editText_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/main_btn_send"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_btn_send" />
    
     <Button
        android:id="@+id/main_btn_signIn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_btn_signIn" />
  

</LinearLayout>